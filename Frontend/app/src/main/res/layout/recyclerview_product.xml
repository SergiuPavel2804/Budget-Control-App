<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="250dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/layout_rounded"
    android:layout_marginBottom="10dp"
    >

    <ImageView
        android:id="@+id/marketImageView"
        android:layout_width="125dp"
        android:layout_height="225dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:paddingBottom="30dp"
        android:src="@drawable/bec_philips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/tvMarketName"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/lightBulb"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/marketImageView"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/tvStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/inStock"
        android:textColor="@color/green"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/marketImageView"
        app:layout_constraintTop_toBottomOf="@id/tvMarketName">

    </TextView>

    <TextView
        android:id="@+id/tvMarketPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/priceForLightBulb"
        android:textColor="@color/light_red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/marketImageView"
        app:layout_constraintTop_toBottomOf="@id/tvStock">

    </TextView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addProductActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="center"
        app:fabCustomSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="45dp"
        app:srcCompat="@drawable/add_product"
        app:tint="@null" />

    <com.example.aplicatie_licenta.views.HorizontalNumberPicker
        android:id="@+id/quantityNrPicker"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>